  <h2 style="text-align:center">Barang Rekomendasi</h2>

{{# each barangs}}
  <div class="row">
    {{# each this}}
  <div class="col-sm-6 col-md-4">
    <div class="thumbnail">
      <img src="{{this.imagePath}}" alt="..." class="img-responsive">
      <div class="caption">
        <h3>{{this.judul}}</h3>
        <p class="description">{{this.deskripsi}}</p>
        <p>
          <div class="clearfix">
            <div class="harga pull-left" style="align:center;">$ {{this.harga}}</div>
            <a href="/add-to-cart/{{this._id}}" class="btn btn-success pull-right" role="button">Lelang</a></p>
          </div>
          
      </div>
    </div>
  </div>
  {{/each}}
  </div>
{{/each}}

 