
<link rel="stylesheet" type="text/css" href="stylesheets/example2.css">
<div class="row">
    <div class="col-sm-6 col-md-4 col-md-offset-4 col-sm-offset-3">
        <h1>Checkout</h1>
        <div id="error" class="alert alert-danger" {{#if noErrors}} hidden {{/if}} >
            {{errMsg}}
        </div>
        <form action="/checkout" method="post" id="payment-form">
          <div class="form-row">
              
              <label>Name</label> <br>
              <input type="text" name="name" class="form-group"><br>
              <label>Address</label><br>
              <input type="text" name="address" class="form-group">
              <br>
              <label>Deskripsi</label><br>
              <input type="text" name="desc" class="form-group">
              <br>
              <br>
            <label for="card-element">
              Credit or debit card
            </label>
            <div id="card-element">
              <!-- A Stripe Element will be inserted here. -->
            </div>

            <!-- Used to display form errors. -->
            <div id="card-errors" role="alert"></div>
          </div>

          <button class="btn btn-success">Submit Payment</button>
        </form>
<script type="text/javascript"src="https://js.stripe.com/v3/"></script>
<script type="text/javascript" src="javascripts/checkout.js"></script>