{{# if barangs}}

<div class="row">
	<div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
		<ul class="list-group">
				{{# each barangs}} 
				<li class="list-group-item">
					<span class="badge">{{this.qty}}</span>
					<strong>{{this.item.judul}}</strong>
					<span class="label label-success">{{this.harga}}</span>
				</li>
				{{/each}}
		</ul>
	</div>
</div>

<div class="row">
		<div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
			<strong>Total: {{ totalPrice }}</strong>
		</div>
</div>
<hr>
<div class="row">
		<div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
			<a href= "/checkout" type="button" class="btn btn-success" type="button">Checkout</a>
		</div>
</div>

{{else}}
<div class="row">
		<div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
			<h2>No Items</h2>
		</div>
</div>

{{/if}}

